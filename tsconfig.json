{
    "exclude": ["dist", "src/_tests", "tsup.config.ts"],
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ESNext", "DOM"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "declaration": true,
        "resolveJsonModule": true,
        "noEmitOnError": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}
